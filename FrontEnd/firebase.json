{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/signup",
        "destination": "/signup.html"
      },

      {
        "source": "/map",
        "destination": "/map.html"
      },
      {
        "source": "**/*.@(js|css|html|ico|png|jpg|svg|json)",
        "destination": "/public/$1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/src/**",
        "destination": "/src/**"
      }
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      },
      {
        "source": "**/*.@(html|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
